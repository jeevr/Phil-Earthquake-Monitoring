{
	"name": "dataflow_segregate_by_day",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "CSVInput",
						"type": "DatasetReference"
					},
					"name": "inputCSV"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "CSVOutput",
						"type": "DatasetReference"
					},
					"name": "sink1"
				}
			],
			"transformations": [
				{
					"name": "filterday01"
				}
			],
			"scriptLines": [
				"parameters{",
				"     param_year as string,",
				"     param_month as string,",
				"     param_day as string",
				"}",
				"source(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> inputCSV",
				"inputCSV filter(toDate(date) == toDate(concat($param_year, '-', lpad($param_month, 2, '0'), '-', lpad($param_day, 2, '0')))) ~> filterday01",
				"filterday01 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     filePattern:(concat('earthquake_data_', lpad($param_day, 2, '0'))),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> sink1"
			]
		}
	}
}